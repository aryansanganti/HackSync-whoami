{
  "expo": {
    "name": "Civic-AI",
    "slug": "Civic-AI",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "civicai",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "bundleIdentifier": "com.civicai.app",
      "buildNumber": "1",
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs access to location to show your position on the map and report civic issues near you.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app needs access to location to show your position on the map and report civic issues near you.",
        "NSCameraUsageDescription": "This app needs access to camera to take photos of civic issues.",
        "NSPhotoLibraryUsageDescription": "This app needs access to photo library to select images of civic issues.",
        "NSMicrophoneUsageDescription": "This app needs access to your microphone for reporting civic issues with audio."
      }
    },
    "android": {
      "package": "com.civicai.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE"
      ],
      "intentFilters": [
        {
          "action": "android.intent.action.VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "civicai"
            }
          ],
          "category": [
            "android.intent.category.DEFAULT",
            "android.intent.category.BROWSABLE"
          ]
        }
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Civic AI to use your location to show your position on the map and report issues near you."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Civic AI to access your camera to take photos of civic issues."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Civic AI to access your photo library to select images of civic issues."
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      ["expo-dev-client"] // Optional for native testing
    ],
    "experiments": {
      "typedRoutes": true
    },
    "updates": {
      "url": "https://u.expo.dev/61b84a6a-4d1e-4040-adbf-b73025059c0e"
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "61b84a6a-4d1e-4040-adbf-b73025059c0e"
      }
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "owner": "aryansanganti"
  }
}